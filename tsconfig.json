{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": true,
    // TODO â€“ Re-enable this once the type issues in node_modules are resolved
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "node"
    ]
  },
  "include": [
    "src",
    "conf",
    ".eslintrc.cjs",
    "types/*.d.ts",
    "public"
  ]
}
